/* The config.json file is where you specify additional configuration needed by
 * your plugin. The details you specify here will be translated to a form on the
 * UI. The values supplied by the users will then get injected as options on the
 * platform on ready event.
 */
{
  "host": {
	"label": "Host",
	"type": "String",
	"required": true,
	"help": "Host(s) for the RethinkDB database."
  },
  "port": {
	"label": "Port",
	"type": "Number",
	"required": false,
	"help": "(Optional) Port for the RethinkDB database."
  },
  "database" : {
	"label": "Database Name",
	"type": "String",
	"required": true,
	"help": "Database Name where the Table is located."
  },
  "table" : {
	"label": "Series Name",
	"type": "String",
	"required": true,
	"help": "Table Name where the data will be saved."
  },
  "auth_key": {
	"label": "Tag Keys",
	"type": "String",
	"required": false,
	"help": "(Optional) Authentication key used for the database, will be set to blank by default)."
  }
}